#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
blank = " "
board = [blank, blank, blank, blank, blank, blank, blank, blank, blank]

puts "Welcome to Tic Tac Toe!"
display_board(board)

puts "Where would you like to go?"
input = gets.strip

move(board, input)
display_board(board)