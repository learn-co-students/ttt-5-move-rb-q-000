#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = []
9.times { board << " " }
moves = 0

puts "Welcome to Tic Tac Toe!"
display_board(board)
puts "Where would you like to move?"

location = gets.chomp
player = get_char(moves)

move(board, location, player)

display_board(board)