#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Where would you like to go?"
input = gets.strip
move(board, input, "X")
modified_board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
modified_board[Integer(input) - 1] = "X"
display_board(modified_board)