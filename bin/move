#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to move? (1 for upper left, 9 for lower right)"

position = gets.strip

move(board, position)
display_board(board)