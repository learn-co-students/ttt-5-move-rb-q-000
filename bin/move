#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
sample_board = ["1", "2", "3", "4", "5", "6", "7", "8", "9"]

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go (choose 1-9 as shown below)?"
display_board(sample_board)
player_move = gets.strip

move(board, player_move)

display_board(board)

