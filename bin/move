#!/usr/bin/env ruby

require_relative '../lib/move.rb'

#Greet the user
puts "Welcome to Tic Tac Toe!"
board = Array.new(9, " ")

#Get input from user
puts "Choose a position (1-9):"
input = gets.strip

#use input to place token into array
move(board, input, 'X')

#display the updated board
display_board(board)