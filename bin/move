#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
# puts "Welcome to the wild world of Tic Tac Toe!"
puts "Welcome to Tic Tac Toe!"

board = [" "," "," "," "," "," "," "," "," "]
display_board(board)

puts "Hello! Where would you like to go? Please select a cell 1-9"

position = gets.strip

index = input_to_index(position)

move(board, index, "X")

display_board(board)
