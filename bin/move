#!/usr/bin/env ruby

require_relative '../lib/move.rb'

board = [" "," "," "," "," "," "," "," "," "]

puts "Welcome to Tic Tac Toe!"

display_board(board)

#sleep(1)

puts "Where would you like to go? (Choose space number 1 - 9)"

#sleep(1)

input=gets.strip

index = input_to_index(input)

move(board,index)

display_board(board)
